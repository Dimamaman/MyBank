<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/successIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:src="@drawable/success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/successTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successfully Added"
        android:fontFamily="@font/poppins_thin"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/successIv"
        app:layout_constraintStart_toStartOf="@id/successIv"
        app:layout_constraintEnd_toEndOf="@id/successIv"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="@id/successTv"
        app:layout_constraintStart_toStartOf="@id/successTv"
        app:layout_constraintTop_toBottomOf="@id/successTv"
        android:textStyle="bold"
        android:text="Close"
        android:contentDescription="close"
        android:background="@drawable/close_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>